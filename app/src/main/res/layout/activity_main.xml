<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/camera_btn_both"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相机" />

    <Button
        android:id="@+id/camera_btn_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相机（仅图片）" />

    <Button
        android:id="@+id/camera_btn_img_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相机（仅图片且裁剪）" />

    <Button
        android:id="@+id/camera_btn_vdo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相机（仅视频）" />

    <Button
        android:id="@+id/album_btn_both"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相册" />

    <Button
        android:id="@+id/album_btn_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相册（单张并裁剪）" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

</LinearLayout>